<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:paddingRight="6dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/root"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="160dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:id="@+id/sc_post_img"
            android:paddingLeft="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingRight="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sc_post_title"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toRightOf="@+id/sc_post_img"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:text="电影名字"
            android:maxEms="13"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/titlecor"
            android:textSize="16sp"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/sc_post_img"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:id="@+id/sc_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.4"
            android:text="简介："
            android:maxEms="13"
            android:layout_marginTop="10dp"
            android:maxLines="6"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/sc_post_img"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.9"
            android:text="豆瓣评分:"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/sc_post_img"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="76dp"
            android:textSize="20sp"
            android:id="@+id/sc_grade"
            android:textStyle="italic"
            android:textColor="#ec7e01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.913"
            android:text="8.0"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>