<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.baofeng.com.supermovie.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/content"
        android:layout_height="match_parent">
    </FrameLayout>
    <Button
        android:layout_width="0dp"
        android:id="@+id/main"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="首页"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintRight_toLeftOf="@+id/down"
        />
    <Button
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="@id/my"
        app:layout_constraintLeft_toRightOf="@+id/main"
        android:id="@+id/down"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="分类"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_height="50dp"
        />
    <Button
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/down"
        android:id="@+id/my"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="个人中心"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_height="50dp"
        />
</android.support.constraint.ConstraintLayout>
