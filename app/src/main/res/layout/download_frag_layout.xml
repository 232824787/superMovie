<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:tabIndicatorColor="#1f90bc"
        app:layout_constraintTop_toTopOf="parent"
        app:tabSelectedTextColor="#1f90bc"
        app:tabTextColor="#232323"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/tabline"
        app:layout_constraintTop_toBottomOf="@+id/tab_title"
        android:background="#d7dedede"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/btvp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tabline"
        android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>