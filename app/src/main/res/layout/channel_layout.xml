<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        app:elevation="0dp"
        android:id="@+id/appbar"
        app:contentScrim="@color/colorPrimary"
        android:gravity="bottom"
        android:layout_height="290dp">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap|enterAlwaysCollapsed"
            app:contentScrim="@color/colorPrimary"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_bg"
                />
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:id="@+id/vp"
                android:clipToPadding="false"
                android:paddingBottom="20dp"
                android:paddingLeft="68dp"
                android:paddingStart="100dp"
                android:paddingEnd="100dp"
                android:paddingRight="68dp"
                android:paddingTop="80dp"
                app:layout_collapseMode="parallax"
                android:background="@android:color/transparent"
                />
            <android.support.v7.widget.Toolbar
                app:layout_collapseMode="pin"
                android:layout_width="match_parent"
                app:paddingStart="0dp"
                android:id="@+id/toobar"
                android:layout_marginTop="20dp"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways"
                android:layout_height="?attr/actionBarSize">
                <include
                    android:id="@+id/search_bar"
                    layout="@layout/searchbar"/>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <!--<cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/bga_refresh"

        android:layout_height="match_parent">

    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>-->
    <com.xiaosu.pulllayout.SimplePullLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:id="@+id/pulllayout"
        android:layout_marginBottom="40dp"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:id="@+id/rvlist"
            android:layout_weight="1"
            android:layout_height="0dp">
        </android.support.v7.widget.RecyclerView>
    </com.xiaosu.pulllayout.SimplePullLayout>

</android.support.design.widget.CoordinatorLayout>